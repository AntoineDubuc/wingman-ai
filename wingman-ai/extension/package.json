{
  "name": "presales-ai-assistant-extension",
  "version": "1.0.0",
  "description": "Real-time AI assistant for Technical Cloud Solutions Presales Consultants during Google Meet calls",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@types/chrome": "^0.0.270",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@webext-core/fake-browser": "^1.3.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "mock-socket": "^9.3.1",
    "playwright": "^1.58.1",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18",
    "vitest-websocket-mock": "^0.5.0"
  },
  "dependencies": {
    "idb": "^8.0.3",
    "marked": "^17.0.1",
    "pdfjs-dist": "^5.4.530",
    "reconnecting-websocket": "^4.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
